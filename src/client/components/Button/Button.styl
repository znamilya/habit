.button
    theme($name, $color, $bg, $gradientTop, $gradientBottom, $border=true)
        &_theme_{$name}
            color $color

            background $bg linear-gradient(to bottom, $gradientTop, $gradientBottom) repeat-x

            if $border
                border-color lighten($gradientTop, 12.4%) $gradientBottom darken($gradientBottom, 59.4%)
            else
                border none


            &:hover
            &:focus
                color $color

                background-color $gradientBottom
                background-position 0 -15px
                transition background-position 0.1s linear


            &:active
                color $color

                background-color $gradientBottom
                background-image none
                box-shadow inset 0 2px 4px rgba(#000, 0.15), 0 1px 2px rgba(#000, 0.05)


        &_theme_{$name}:disabled
            &:hover
            &:focus
            &:active
                color $color
                text-shadow 0 1px 0 lighten($color, 64%)

                background-color $bg
                background-image linear-gradient(to bottom, $gradientTop, $gradientBottom)
                background-repeat repeat-x
                background-position 0 0
                box-shadow inset 0 1px 0 rgba(#fff, 0.5), 0 1px 1px rgba(#000, 0.1)
                if $border
                    border-color lighten($gradientTop, 12.4%) $gradientBottom darken($gradientBottom, 59.4%)
                else
                    border none

                transition none


    box-sizing border-box
    display inline-block
    vertical-align middle
    height 32px
    padding 0 20px

    text-align center
    line-height 32px
    font-family inherit
    font-style inherit
    font-size 14px
    color inherit
    text-decoration: none
    text-shadow 0 1px 1px rgba(#fff, 0.75)
    white-space nowrap

    cursor pointer
    background-color #f5f5f5
    background-image linear-gradient(to bottom, #fff, #f2f2f2)
    background-repeat repeat-x
    border 1px solid #ccc
    border-color #ccc #bbb #999
    border-color rgba(#000, 0.1) rgba(#000, 0.1) rgba(#000, 0.25);
    border-bottom-color #b3b3b3
    border-radius 3px
    box-shadow inset 0 1px 0 rgba(#fff, 0.5), 0 1px 1px rgba(#000, 0.1)
    outline none


    &:disabled
        opacity 0.5
        cursor default


    theme('default', #fff, #5bb75b, #a3c748, #8bb02c)
    theme('green', #34440d, #5bb75b, #a3c748, #8bb02c)
