.input
    $height    = 26px
    $font-size = 13px

    box-sizing border-box
    width: 100%
    height: 32px
    padding: 0 (6px/$font-size)em

    font-family: inherit
    font-size: $font-size
    letter-spacing: 0
    line-height: $height
    color: #333
    text-shadow: 0 1px 0 #fff

    border-top: 1px solid #7a7a7a
    border-right: 1px solid #a4a4a4
    border-bottom: 1px solid #b2b2b2
    border-left: 1px solid #a4a4a4
    border-radius: 3px
    background: #fff
    box-shadow: 0 1px 0 #fff,
                inset 0 2px 5px rgba(0,0,0,.1)

    // stackoverflow.com/questions/2781549/removing-input-background-colour-for-chrome-autocomplete
    &:-webkit-autofill
        -webkit-box-shadow: 0 0 0px 1000px #fff inset;


    &:focus
        color: #fff

        color #000
        text-shadow none

        border: 1px solid #0036ff
        box-shadow: 0 0 0 2px #5E9ED7


    &:disabled
        opacity: 0.3

        cursor: default
        pointer-events: none

        background: #eee


    &_error:not(:focus)
        border-color: #D66 !important
        box-shadow: 0 0 4px rgba(255, 0, 0, .5),
                    inset 0 2px 5px rgba(0, 0, 0, 0.1) !important
